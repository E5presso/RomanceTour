				</div>
				<div class="form-group col-12">
					<label>
						은행
					</label>
					<select id="billing-bank" class="form-control">
						@foreach (var bank in banks)
						{
							<option value="@bank">@bank</option>
						}
					</select>
				</div>
				<div class="form-group col-12">
					<label>
