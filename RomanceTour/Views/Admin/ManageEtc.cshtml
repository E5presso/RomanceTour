<div id="popup-container">
	<div id="category-popup" class="popup">
		<input id="category-id" class="id-field" type="hidden" />
		<span class="title">
			카테고리
		</span>
		<button class="cancel-btn">
			<span class="btn-icon fas fa-times"></span>
		</button>
		<div class="container-fluid">
			<div class="row">
				<div class="form-group col-12">
					<label>
						카테고리 이름
					</label>
					<input type="text" id="category-name" class="form-control" />
				</div>
				<div class="form-group col-12">
					<label>
						설명
					</label>
					<input type="text" id="category-description" class="form-control" />
				</div>
				<div class="form-group col-12">
					<button id="save-category" class="btn">
						<span class="btn-icon fas fa-save"></span>
						<span class="btn-text">
							저장하기
						</span>
					</button>
				</div>
			</div>
		</div>
	</div>
	<div id="billing-popup" class="popup">
		<input id="billing-id" class="id-field" type="hidden" />
		<span class="title">
			입금계좌
		</span>
		<button class="cancel-btn">
			<span class="btn-icon fas fa-times"></span>
		</button>
