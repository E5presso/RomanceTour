@{
	ViewData["DATA"] = "ManageUser";
	ViewData["TITLE"] = "회원관리";
}

<link rel="stylesheet" href="~/views/admin/manage-user.css" />
<script src="~/views/admin/manage-user.js"></script>

<div class="page-back">
	<button class="btn second go-back">
		<span class="fa fa-arrow-left btn-icon"></span>
		<span class="btn-text">
			이전 페이지
		</span>
	</button>
</div>
<div class="search-area">
	<select class="form-control search-option">
		<option value="0">이름</option>
		<option value="1">아이디</option>
		<option value="2">전화번호</option>
	</select>
	<div class="search-bar-second search-user">
		<input type="search" class="form-control search-text" placeholder="검색어 입력" />
		<button class="btn second user-search-btn">
			<span class="fa fa-search"></span>
		</button>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-borderless table-striped">
		<thead>
			<tr>
				<th class="d-table-cell">
					<span class="table-header">
						이름
					</span>
				</th>
				<th class="d-none d-md-table-cell">
					<span class="table-header">
						아이디
					</span>
				</th>
				<th class="d-none d-md-table-cell">
					<span class="table-header">
						생년월일
					</span>
				</th>
				<th class="d-table-cell">
					<span class="table-header">
						휴대폰 번호
					</span>
				</th>
				<th class="d-none d-xl-table-cell">
					<span class="table-header">
						주소
					</span>
				</th>
				<th class="d-table-cell">
					<span class="table-header">
						작업
					</span>
				</th>
			</tr>
		</thead>
		<tbody class="user-list">
		</tbody>
	</table>
</div>