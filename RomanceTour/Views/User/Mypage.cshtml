@{
	ViewData["DATA"] = "Mypage";
	ViewData["TITLE"] = "마이페이지";
	User user = Model;
	string[] banks = new string[]
	{
		"국민",
		"신한",
		"우리",
		"하나",
		"농협",
		"수협",
		"신협",
		"산업",
		"기업",
		"토스",
		"카카오"
	};
}

<script src="https://t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>

<link rel="stylesheet" href="~/shared/css/full-screen.css" />
<link rel="stylesheet" href="~/views/user/mypage.css" />
<script src="~/views/user/mypage.js"></script>
<div class="full-screen-area">
	<div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="background-image" src="~/shared/img/1.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/2.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/3.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/4.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/5.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/6.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/7.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/8.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/9.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/10.jpg" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="background-image" src="~/shared/img/11.jpg" alt="First slide">
			</div>
		</div>
	</div>
	<div class="shadow-box">
		<div class="my-page-area">
			<div class="profile-area">
				@{
					var nowTime = DateTime.Now.Hour;
					if (nowTime >= 6 && nowTime <= 10)
					{
						<span class="time-icon fas fa-sun"></span>
						<span class="greeting">
							좋은 아침입니다
						</span>
						<span class="user-name">
							@(user.Name)님!
						</span>
					}
					else if (nowTime >= 11 && nowTime <= 14)
					{
						<span class="time-icon fas fa-utensils"></span>
						<span class="user-name">
							@(user.Name)님
						</span>
						<span class="greeting">
							식사는 하셨나요?
						</span>
					}
					else if (nowTime >= 15 && nowTime <= 18)
					{
						<span class="time-icon fas fa-briefcase"></span>
						<span class="greeting">
							힘내세요
						</span>
						<span class="user-name">
							@(user.Name)님!
						</span>
					}
					else if (nowTime >= 19 && nowTime <= 20)
					{
						<span class="time-icon fas fa-home"></span>
						<span class="greeting">
							오늘도
						</span>
						<span class="greeting">
							고생 많으셨어요
						</span>
						<span class="user-name">
							@(user.Name)님!
						</span>
					}
					else if (nowTime >= 21 || nowTime <= 0)
					{
						<span class="time-icon fas fa-moon"></span>
						<span class="user-name">
							@(user.Name)님
						</span>
						<span class="greeting">
							좋은 밤입니다!
						</span>
					}
					else if (nowTime >= 1 && nowTime <= 5)
					{
						<span class="time-icon fas fa-star"></span>
						<span class="user-name">
							@(user.Name)님!
						</span>
						<span class="greeting">
							이 새벽에
						</span>
						<span class="greeting">
							어쩐 일이세요?
						</span>
					}
					else
					{
						<span class="time-icon fas fa-smile-wink"></span>
						<span class="user-name">
							@(user.Name)님
						</span>
						<span class="greeting">
							어서오세요!
						</span>
					}
				}
			</div>
			<div class="tool-area">
				<div class="tool-container container-fluid">
					<div class="row">
						<div class="tool-box-container col-12 col-md-7 col-xl-4">
							<div id="personal-info" class="tool-box">
								<span class="menu-title">개인정보</span>
								<div class="form-group my-page-form-group">
									<label>이름</label>
									<input type="text" id="name" class="form-control" value="@user.Name" />
								</div>
								<div class="form-group my-page-form-group">
									<label>주소</label>
									<input type="text" id="address" class="form-control" value="@user.Address" />
								</div>
								<div class="form-group my-page-form-group">
									<label>생년월일</label>
									<input type="date" id="birthday" class="form-control" value="@user.Birthday.ToShortDateString()" />
								</div>
								<div class="form-group my-page-form-group">
									<button id="change-personal-info" class="btn" disabled>
										<span class="btn-text">
											개인정보 변경
										</span>
									</button>
								</div>
							</div>
						</div>
						<div class="tool-box-container col-12 col-md-5 col-xl-4">
							<div id="phone-number" class="tool-box">
								<span class="menu-title">휴대폰 번호</span>
								<div class="form-group my-page-form-group">
									<label>기존 휴대폰 번호</label>
									<input type="text" class="form-control" value="@user.Phone" disabled />
								</div>
								<div class="form-group my-page-form-group">
									<label>새로운 휴대폰 번호</label>
									<div class="form-group input-bundle">
										<input type="text" id="new-phone-number" class="form-control" placeholder="'-' 없이 입력" />
										<button id="chanllenge" class="btn" disabled>
											<span class="btn-text">
												인증
											</span>
										</button>
									</div>
								</div>
								<div class="form-group my-page-form-group">
									<label>인증번호 [03:00]</label>
									<div class="form-group input-bundle">
										<input type="text" id="verification-code" class="form-control" />
										<button id="check-verification-code" class="btn" disabled>
											<span class="btn-text">
												확인
											</span>
										</button>
									</div>
								</div>
								<div class="form-group my-page-form-group">
									<button id="change-phone-number" class="btn" disabled>
										<span class="btn-text">
											휴대폰 번호 변경
										</span>
									</button>
								</div>
							</div>
						</div>
						<div class="tool-box-container col-12 col-md-6 col-xl-4">
							<div id="payment-info" class="tool-box">
								<span class="menu-title">결제정보</span>
								<div class="form-group my-page-form-group">
									<label>예금주명</label>
									<input type="text" id="billing-name" class="form-control" value="@user.BillingName" />
								</div>
								<div class="form-group my-page-form-group">
									<label>은행</label>
									<select id="billing-bank" class="form-control">
										@foreach (var bank in banks)
										{
											if (user.BillingBank == bank)
											{
												<option value="@bank" selected>@bank</option>
											}
											else
											{
												<option value="@bank">@bank</option>
											}
										}
									</select>
								</div>
								<div class="form-group my-page-form-group">
									<label>계좌번호</label>
									<input type="text" id="billing-number" class="form-control" value="@user.BillingNumber" />
								</div>
								<div class="form-group my-page-form-group">
									<button id="change-payment-info" class="btn" disabled>
										<span class="btn-text">
											결제정보 변경
										</span>
									</button>
								</div>
							</div>
						</div>
						<div class="tool-box-container col-12 col-md-6 col-xl-5">
							<div id="password" class="tool-box">
								<span class="menu-title">비밀번호</span>
								<div class="form-group my-page-form-group">
									<label>이전 비밀번호</label>
									<input type="password" id="old-password" class="form-control" />
								</div>
								<div class="form-group my-page-form-group">
									<label>새 비밀번호</label>
									<input type="password" id="new-password" class="form-control" />
								</div>
								<div class="form-group my-page-form-group">
									<label>비밀번호 확인</label>
									<input type="password" id="confirm-password" class="form-control" />
								</div>
								<div class="form-group my-page-form-group">
									<button id="change-password" class="btn" disabled>
										<span class="btn-text">
											비밀번호 변경
										</span>
									</button>
								</div>
							</div>
						</div>
						<div class="tool-box-container col-12 col-xl-7">
							<div id="unregister" class="tool-box">
								<span class="menu-title">회원 탈퇴</span>
								<div class="form-group my-page-form-group">
									<label>아이디</label>
									<input type="text" id="unregister-username" class="form-control" />
								</div>
								<div class="form-group my-page-form-group">
									<label>비밀번호</label>
									<input type="password" id="unregister-password" class="form-control" />
								</div>
								<div class="form-group my-page-form-group">
									<button id="do-unregister" class="btn" disabled>
										<span class="btn-text">
											회원탈퇴
										</span>
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>